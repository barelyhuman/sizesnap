{
  "name": "sizesnap",
  "version": "0.0.2",
  "description": "Simple file size snapshot generator",
  "keywords": [
    "cli",
    "bundle",
    "size",
    "file size",
    "limit file size"
  ],
  "license": "MIT",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "main": "index.js",
  "bin": {
    "sizesnap": "./dist/index.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "ncc build -m src/cli.js -o dist",
    "postbuild": " chmod +x dist/index.js",
    "dev": "npm run build -- -w",
    "prepublishOnly": "npm run build",
    "size": "./dist/index.js"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "brotli-size": "^4.0.0",
    "bytes": "^3.1.1",
    "picocolors": "^1.0.0",
    "tiny-glob": "^0.2.9"
  },
  "engines": {
    "node": ">=12"
  },
  "sizesnap": {
    "files": [
      "./dist/*.js"
    ]
  }
}
