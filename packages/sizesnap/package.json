{
  "name": "sizesnap",
  "version": "0.1.1",
  "description": "Simple file size snapshot generator",
  "keywords": [
    "cli",
    "bundle",
    "size",
    "file size",
    "limit file size"
  ],
  "license": "MIT",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "main": "./dist/index.js",
  "bin": {
    "sizesnap": "./dist/index.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "ncc build -m src/index.js",
    "postbuild": "chmod +x dist/index.js",
    "dev": "npm run build -- -w",
    "prepublishOnly": "npm run build",
    "size": "./dist/index.js",
    "test": "uvu -i fixtures"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "brotli-size": "^4.0.0",
    "picocolors": "^1.0.0",
    "tiny-glob": "^0.2.9",
    "uvu": "^0.5.3"
  },
  "sizesnap": {
    "files": [
      "./dist/*.js"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "tar": "^6.1.11"
  }
}
